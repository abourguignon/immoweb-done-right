{
  "manifest_version": 2,

  "name": "Immoweb Done Right",
  "description": "De-obfuscate addresses so you can copy-paste them easily, and provide a direct link to Google maps.",
  "version": "0.3",
  "author": "Antonin Bourguignon",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Immoweb Done Right is running on this page"
  },

  "content_scripts": [
  {
    "js": [
      "jquery.min.js",
      "content.js"
    ],
    "matches": [
      "http://www.immoweb.be/*/Buy.Estate.cfm*",
      "https://www.immoweb.be/*/Buy.Estate.cfm*",
      "http://www.immoweb.be/*/Rent.Estate.cfm*",
      "https://www.immoweb.be/*/Rent.Estate.cfm*",
      "http://www.immoweb.be/*/buy.estate.cfm*",
      "https://www.immoweb.be/*/buy.estate.cfm*",
      "http://www.immoweb.be/*/rent.estate.cfm*",
      "https://www.immoweb.be/*/rent.estate.cfm*"
    ]
  }],

  "permissions": [
    "activeTab"
  ]
}
